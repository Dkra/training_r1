extends layout

block pageTitle
  title= "Admin Login Page"

block content
  .content-wrapper.page-login
    .form-wrapper
      .page-title User Mananger Login
      form
        .form-group
          //- label(for="username") Account
          input#username.form-control(type="text" aria-describedby="usernameHelp" placeholder="Username" value="")
        .form-group
          //- label(for="password") Password
          input#password.form-control(type="password" placeholder="Password" value="")
        .btn-wrap
          button.btn.btn-secondary.reset-btn(type="button") Reset
          button.btn.btn-primary.login-btn(type="button") Login
block scripts
  script(src="/javascripts/login.js")